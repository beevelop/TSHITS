# GitLab Configuration
# Copy to .env.production and fill in your values

# Project settings
COMPOSE_PROJECT_NAME=gitlab
SERVICE_DOMAIN=gitlab.example.com
TZ=Europe/Berlin

# Database
DB_NAME=gitlab
DB_USER=gitlab
DB_PASS=Swordfish

# GitLab admin
GITLAB_ROOT_PASSWORD=Swordfish

# GitLab secrets (generate with: openssl rand -hex 64)
GITLAB_SECRETS_DB_KEY_BASE=1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
GITLAB_SECRETS_SECRET_KEY_BASE=1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
GITLAB_SECRETS_OTP_KEY_BASE=1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# GitLab settings
GITLAB_TIMEZONE=Berlin
GITLAB_EMAIL=gitlab@example.com
GITLAB_EMAIL_DISPLAY_NAME=GitLab
GITLAB_SSH_HOST=gitlab.example.com
GIT_PORT=22

# Backup settings
GITLAB_BACKUPS=daily
GITLAB_BACKUP_TIME=02:00
GITLAB_BACKUP_EXPIRY=604800
GITLAB_BACKUP_SKIP=

# Performance
GITLAB_UNICORN_MEMORY_MAX=1024
NGINX_MAX_UPLOAD_SIZE=250m

# Features
GITLAB_PROJECTS_SNIPPETS=true
GITLAB_NOTIFY_ON_BROKEN_BUILDS=true

# SMTP settings
SMTP_ENABLED=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_DOMAIN=example.com
SMTP_AUTHENTICATION=login
SMTP_TLS=true

# IMAP settings (for reply by email)
IMAP_ENABLED=false
IMAP_HOST=imap.example.com
IMAP_PORT=993
IMAP_USER=
IMAP_PASS=
IMAP_SSL=true
